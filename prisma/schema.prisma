// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// 사용자 역할
enum UserRole {
  ADMIN   // 어드민: 모든 지점 데이터 + 성과지표 UI 접근
  BRANCH  // 지점: 할당된 지점 데이터만 접근
}

// 사용자
model User {
  id        String    @id @default(cuid())
  username  String    @unique  // 로그인 아이디
  password  String    // bcrypt 해시
  name      String    // 표시 이름
  role      UserRole  @default(BRANCH)
  branchId  String?   // BRANCH 역할일 경우 접근 가능한 지점
  branch    Branch?   @relation(fields: [branchId], references: [id])
  isActive  Boolean   @default(true)
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt

  @@map("users")
}

// 지점 정보
model Branch {
  id        String   @id @default(cuid())
  name      String   @unique  // 지점명 (예: "센시빌리티")
  index     Int      @unique  // 드롭다운 인덱스
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  users            User[]
  dailyMetrics     DailyMetric[]
  dailyVisitors    DailyVisitor[]
  hourlyUsages     HourlyUsage[]
  campaignBranches CampaignBranch[]
  strategyBranches StrategyBranch[]
  combinedBranches CombinedBranch[]

  @@map("branches")
}

// 일일 지표 (매일 크롤링되는 데이터)
model DailyMetric {
  id        String   @id @default(cuid())
  branchId  String
  date      DateTime @db.Date  // 수집 날짜 (YYYY-MM-DD)

  // 신규 이용자 수
  newUsers  Int?

  // 좌석 이용자 수
  seatUsage Int?

  // 매출 데이터
  totalRevenue      Decimal?  @db.Decimal(10, 2)  // 총 매출
  dayTicketRevenue  Decimal?  @db.Decimal(10, 2)  // 당일권 매출
  timeTicketRevenue Decimal?  @db.Decimal(10, 2)  // 시간권 매출
  termTicketRevenue Decimal?  @db.Decimal(10, 2)  // 기간권 매출

  // 신규 이용자 상세 통계
  newUsersMale      Int?  // 신규 남자 이용자 수
  newUsersFemale    Int?  // 신규 여자 이용자 수
  newUsers10s       Int?  // 신규 10대
  newUsers20s       Int?  // 신규 20대
  newUsers30s       Int?  // 신규 30대
  newUsers40s       Int?  // 신규 40대
  newUsers50s       Int?  // 신규 50대
  newUsers60plus    Int?  // 신규 60대 이상

  // 메타 정보
  collectedAt DateTime @default(now())  // 실제 수집 시간

  // Relations
  branch    Branch   @relation(fields: [branchId], references: [id], onDelete: Cascade)

  @@unique([branchId, date])  // 지점당 하루에 하나의 레코드만
  @@index([date])
  @@index([branchId, date])
  @@map("daily_metrics")
}

// 일일 방문자 (좌석 이용자) - 재방문 추적용
model DailyVisitor {
  id           String   @id @default(cuid())
  branchId     String
  visitDate    DateTime @db.Date  // 방문 날짜

  // 개인 식별 정보 (해시 처리)
  phoneHash    String   // SHA256 해시된 전화번호 (재방문 추적용)
  phoneLast4   String?  // 전화번호 뒤 4자리 (관리자 확인용)

  // 방문자 정보
  gender       String?  // 성별 (남자/여자/미상)
  age          Int?     // 나이
  ageGroup     String?  // 연령대 (10대/20대/30대...)

  // 방문 유형
  isNewUser    Boolean  @default(false)  // 신규 이용자 여부

  // 메타 정보
  collectedAt  DateTime @default(now())

  // Relations
  branch       Branch   @relation(fields: [branchId], references: [id], onDelete: Cascade)

  @@index([branchId, visitDate])
  @@index([phoneHash])  // 재방문 조회용
  @@index([visitDate])
  @@map("daily_visitors")
}

// 광고 캠페인
model Campaign {
  id          String   @id @default(cuid())
  name        String   // 캠페인명
  startDate   DateTime @db.Date
  endDate     DateTime @db.Date

  // 광고 지표
  impressions Int?     // 노출수
  clicks      Int?     // 클릭수
  cost        Decimal? @db.Decimal(10, 2)  // 비용

  // 상태 관리
  status      String   @default("ONGOING")  // ONGOING: 진행중, COMPLETED: 완료

  // 메타 정보
  description String?  @db.Text
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Relations - Many-to-Many
  branches    CampaignBranch[]

  @@index([startDate, endDate])
  @@index([status])
  @@map("campaigns")
}

// 캠페인-지점 연결 테이블
model CampaignBranch {
  id         String   @id @default(cuid())
  campaignId String
  branchId   String
  createdAt  DateTime @default(now())

  campaign   Campaign @relation(fields: [campaignId], references: [id], onDelete: Cascade)
  branch     Branch   @relation(fields: [branchId], references: [id], onDelete: Cascade)

  @@unique([campaignId, branchId])
  @@index([campaignId])
  @@index([branchId])
  @@map("campaign_branches")
}

// 지점 전략
model Strategy {
  id          String   @id @default(cuid())
  name        String   // 전략명
  type        String   // 전략 유형: PRICE_DISCOUNT, REVIEW_EVENT, NEW_CONTENT, etc.
  startDate   DateTime @db.Date
  endDate     DateTime @db.Date

  // 전략 상세
  reason      String?  @db.Text  // 전략 수립 이유
  description String?  @db.Text  // 전략 상세 내용

  // 상태 관리
  status      String   @default("ONGOING")  // ONGOING: 진행중, COMPLETED: 완료

  // 메타 정보
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Relations - Many-to-Many
  branches    StrategyBranch[]

  @@index([type])
  @@index([startDate, endDate])
  @@index([status])
  @@map("strategies")
}

// 전략-지점 연결 테이블
model StrategyBranch {
  id         String   @id @default(cuid())
  strategyId String
  branchId   String
  createdAt  DateTime @default(now())

  strategy   Strategy @relation(fields: [strategyId], references: [id], onDelete: Cascade)
  branch     Branch   @relation(fields: [branchId], references: [id], onDelete: Cascade)

  @@unique([strategyId, branchId])
  @@index([strategyId])
  @@index([branchId])
  @@map("strategy_branches")
}

// 통합 분석 (광고 + 전략)
model CombinedAnalysis {
  id          String   @id @default(cuid())
  name        String   // 분석명
  startDate   DateTime @db.Date
  endDate     DateTime @db.Date

  // 광고 지표
  cost        Decimal? @db.Decimal(10, 2)  // 광고 비용
  impressions Int?     // 노출수
  clicks      Int?     // 클릭수

  // 전략 정보
  strategyType String?  // 전략 유형: PRICE_DISCOUNT, REVIEW_EVENT, NEW_CONTENT
  reason       String?  @db.Text  // 전략 수립 이유
  description  String?  @db.Text  // 전략 상세 내용

  // 상태 관리
  status      String   @default("ONGOING")  // ONGOING: 진행중, COMPLETED: 완료

  // 메타 정보
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Relations - Many-to-Many
  branches    CombinedBranch[]

  @@index([startDate, endDate])
  @@index([status])
  @@map("combined_analyses")
}

// 통합분석-지점 연결 테이블
model CombinedBranch {
  id         String   @id @default(cuid())
  combinedId String
  branchId   String
  createdAt  DateTime @default(now())

  combined   CombinedAnalysis @relation(fields: [combinedId], references: [id], onDelete: Cascade)
  branch     Branch           @relation(fields: [branchId], references: [id], onDelete: Cascade)

  @@unique([combinedId, branchId])
  @@index([combinedId])
  @@index([branchId])
  @@map("combined_branches")
}

// 시간대별 이용자 수
model HourlyUsage {
  id          String   @id @default(cuid())
  branchId    String
  date        DateTime @db.Date  // 날짜
  hour        Int      // 시간 (0-23)
  usageCount  Int      // 해당 시간 이용자 수
  collectedAt DateTime @default(now())

  // Relations
  branch      Branch   @relation(fields: [branchId], references: [id], onDelete: Cascade)

  @@unique([branchId, date, hour])
  @@index([branchId, date])
  @@index([date])
  @@map("hourly_usage")
}
