generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// 사용자 역할
enum UserRole {
  ADMIN   // 어드민: 모든 지점 데이터 + 성과지표 UI 접근
  BRANCH  // 지점: 할당된 지점 데이터만 접근
}

// 사용자
model User {
  id        String    @id @default(cuid())
  username  String    @unique  // 로그인 아이디
  password  String    // bcrypt 해시
  name      String    // 표시 이름
  role      UserRole  @default(BRANCH)
  branchId  String?   // BRANCH 역할일 경우 접근 가능한 지점
  branch    Branch?   @relation(fields: [branchId], references: [id])
  isActive  Boolean   @default(true)
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt

  @@map("users")
}

model Branch {
  id               String           @id @default(cuid())
  name             String           @unique
  index            Int
  createdAt        DateTime         @default(now())
  updatedAt        DateTime         @updatedAt
  users            User[]
  campaignBranches CampaignBranch[]
  combinedBranches CombinedBranch[]
  dailyMetrics     DailyMetric[]
  dailyVisitors    DailyVisitor[]
  hourlyUsages     HourlyUsage[]
  strategyBranches StrategyBranch[]
  ticket_revenue   ticket_revenue[]

  @@map("branches")
}

model DailyMetric {
  id                String   @id @default(cuid())
  branchId          String
  date              DateTime @db.Date
  newUsers          Int?
  seatUsage         Int?
  totalRevenue      Decimal? @db.Decimal(10, 2)
  dayTicketRevenue  Decimal? @db.Decimal(10, 2)
  timeTicketRevenue Decimal? @db.Decimal(10, 2)
  termTicketRevenue Decimal? @db.Decimal(10, 2)
  collectedAt       DateTime @default(now())
  newUsers10s       Int?
  newUsers20s       Int?
  newUsers30s       Int?
  newUsers40s       Int?
  newUsers50s       Int?
  newUsers60plus    Int?
  newUsersFemale    Int?
  newUsersMale      Int?
  pointUsed         Decimal? @db.Decimal(10, 2)
  branch            Branch   @relation(fields: [branchId], references: [id], onDelete: Cascade)

  @@unique([branchId, date])
  @@index([date])
  @@index([branchId, date])
  @@map("daily_metrics")
}

model DailyVisitor {
  id          String   @id @default(cuid())
  branchId    String
  visitDate   DateTime @db.Date
  phoneHash   String
  phoneLast4  String?
  gender      String?
  age         Int?
  ageGroup    String?
  isNewUser   Boolean  @default(false)
  collectedAt DateTime @default(now())
  branch      Branch   @relation(fields: [branchId], references: [id], onDelete: Cascade)

  @@index([branchId, visitDate])
  @@index([phoneHash])
  @@index([visitDate])
  @@map("daily_visitors")
}

model Campaign {
  id          String           @id @default(cuid())
  name        String
  startDate   DateTime         @db.Date
  endDate     DateTime         @db.Date
  impressions Int?
  clicks      Int?
  cost        Decimal?         @db.Decimal(10, 2)
  description String?
  createdAt   DateTime         @default(now())
  updatedAt   DateTime         @updatedAt
  status      String           @default("ONGOING")
  branches    CampaignBranch[]

  @@index([startDate, endDate])
  @@index([status])
  @@map("campaigns")
}

model CampaignBranch {
  id         String   @id @default(cuid())
  campaignId String
  branchId   String
  createdAt  DateTime @default(now())
  branch     Branch   @relation(fields: [branchId], references: [id], onDelete: Cascade)
  campaign   Campaign @relation(fields: [campaignId], references: [id], onDelete: Cascade)

  @@unique([campaignId, branchId])
  @@index([campaignId])
  @@index([branchId])
  @@map("campaign_branches")
}

model Strategy {
  id          String           @id @default(cuid())
  name        String
  type        String
  startDate   DateTime         @db.Date
  endDate     DateTime         @db.Date
  description String?
  createdAt   DateTime         @default(now())
  updatedAt   DateTime         @updatedAt
  reason      String?
  status      String           @default("ONGOING")
  branches    StrategyBranch[]

  @@index([type])
  @@index([startDate, endDate])
  @@index([status])
  @@map("strategies")
}

model StrategyBranch {
  id         String   @id @default(cuid())
  strategyId String
  branchId   String
  createdAt  DateTime @default(now())
  branch     Branch   @relation(fields: [branchId], references: [id], onDelete: Cascade)
  strategy   Strategy @relation(fields: [strategyId], references: [id], onDelete: Cascade)

  @@unique([strategyId, branchId])
  @@index([strategyId])
  @@index([branchId])
  @@map("strategy_branches")
}

model CombinedAnalysis {
  id           String           @id @default(cuid())
  name         String
  startDate    DateTime         @db.Date
  endDate      DateTime         @db.Date
  cost         Decimal?         @db.Decimal(10, 2)
  impressions  Int?
  clicks       Int?
  strategyType String?
  reason       String?
  description  String?
  status       String           @default("ONGOING")
  createdAt    DateTime         @default(now())
  updatedAt    DateTime         @updatedAt
  branches     CombinedBranch[]

  @@index([startDate, endDate])
  @@index([status])
  @@map("combined_analyses")
}

model CombinedBranch {
  id         String           @id @default(cuid())
  combinedId String
  branchId   String
  createdAt  DateTime         @default(now())
  branch     Branch           @relation(fields: [branchId], references: [id], onDelete: Cascade)
  combined   CombinedAnalysis @relation(fields: [combinedId], references: [id], onDelete: Cascade)

  @@unique([combinedId, branchId])
  @@index([combinedId])
  @@index([branchId])
  @@map("combined_branches")
}

model HourlyUsage {
  id          String   @id @default(cuid())
  branchId    String
  date        DateTime @db.Date
  hour        Int
  usageCount  Int
  collectedAt DateTime @default(now())
  branch      Branch   @relation(fields: [branchId], references: [id], onDelete: Cascade)

  @@unique([branchId, date, hour])
  @@index([branchId, date])
  @@index([date])
  @@map("hourly_usage")
}

model ticket_revenue {
  id          String   @id
  branchId    String
  date        DateTime @db.Date
  ticketName  String
  revenue     Decimal  @db.Decimal(10, 2)
  collectedAt DateTime @default(now())
  branches    Branch   @relation(fields: [branchId], references: [id], onDelete: Cascade)

  @@unique([branchId, date, ticketName])
  @@index([branchId, date])
  @@index([date])
  @@index([ticketName])
}
