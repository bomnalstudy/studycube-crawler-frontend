generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("POSTGRES_URL")
}

model Branch {
  id                 String               @id @default(cuid())
  name               String               @unique
  index              Int
  createdAt          DateTime             @default(now())
  updatedAt          DateTime             @updatedAt
  // 지점 특성 (Strategy 대조군 비교용)
  region             String?              // 수도권/경기/지방
  size               String?              // 소형/중형/대형
  targetAudience     String?              // 학생가/주거지/오피스
  openedAt           DateTime?            @db.Date  // 오픈일 (maturity 계산용)
  // Relations
  campaignBranches   CampaignBranch[]
  combinedBranches   CombinedBranch[]
  customerPurchases  CustomerPurchase[]
  customers          Customer[]
  dailyMetrics       DailyMetric[]
  dailyVisitors      DailyVisitor[]
  hourlyUsages       HourlyUsage[]
  strategyBranches   StrategyBranch[]
  ticketRevenues     TicketRevenue[]
  users              User[]
  customerClaims     CustomerClaim[]
  automationFlows    AutomationFlow[]
  // Strategy 관련
  eventBranches          EventBranch[]
  externalFactorBranches ExternalFactorBranch[]
  eventPerformances      EventPerformance[]

  @@map("branches")
}

model CampaignBranch {
  id         String   @id @default(cuid())
  campaignId String
  branchId   String
  createdAt  DateTime @default(now())
  branch     Branch   @relation(fields: [branchId], references: [id], onDelete: Cascade)
  campaign   Campaign @relation(fields: [campaignId], references: [id], onDelete: Cascade)

  @@unique([campaignId, branchId])
  @@index([branchId])
  @@index([campaignId])
  @@map("campaign_branches")
}

model Campaign {
  id               String           @id @default(cuid())
  name             String
  startDate        DateTime         @db.Date
  endDate          DateTime         @db.Date
  impressions      Int?
  clicks           Int?
  cost             Decimal?         @db.Decimal(10, 2)
  description      String?
  createdAt        DateTime         @default(now())
  updatedAt        DateTime         @updatedAt
  status           String           @default("ONGOING")
  branches         CampaignBranch[]

  @@index([startDate, endDate])
  @@index([status])
  @@map("campaigns")
}

model CombinedAnalysis {
  id              String           @id @default(cuid())
  name            String
  startDate       DateTime         @db.Date
  endDate         DateTime         @db.Date
  cost            Decimal?         @db.Decimal(10, 2)
  impressions     Int?
  clicks          Int?
  strategyType    String?
  reason          String?
  description     String?
  status          String           @default("ONGOING")
  createdAt       DateTime         @default(now())
  updatedAt       DateTime         @updatedAt
  branches        CombinedBranch[]

  @@index([startDate, endDate])
  @@index([status])
  @@map("combined_analyses")
}

model CombinedBranch {
  id         String           @id @default(cuid())
  combinedId String
  branchId   String
  createdAt  DateTime         @default(now())
  branch     Branch           @relation(fields: [branchId], references: [id], onDelete: Cascade)
  combined   CombinedAnalysis @relation(fields: [combinedId], references: [id], onDelete: Cascade)

  @@unique([combinedId, branchId])
  @@index([branchId])
  @@index([combinedId])
  @@map("combined_branches")
}

/// This model or at least one of its fields has comments in the database, and requires an additional setup for migrations: Read more: https://pris.ly/d/database-comments
model CustomerPurchase {
  id           String   @id @default(cuid())
  customerId   String
  branchId     String
  purchaseDate DateTime @db.Date
  ticketName   String
  amount       Decimal  @db.Decimal(10, 2)
  paymentTime  String?
  pointUsed    Decimal? @db.Decimal(10, 2)
  branch       Branch   @relation(fields: [branchId], references: [id])
  customer     Customer @relation(fields: [customerId], references: [id], onDelete: Cascade)

  @@index([branchId, purchaseDate])
  @@index([customerId])
  @@index([purchaseDate])
  @@index([ticketName])
  @@index([customerId], map: "idx_customer_purchases_customerid")
  @@index([purchaseDate], map: "idx_customer_purchases_purchasedate")
  @@map("customer_purchases")
}

/// This model or at least one of its fields has comments in the database, and requires an additional setup for migrations: Read more: https://pris.ly/d/database-comments
model Customer {
  id                String             @id @default(cuid())
  phone             String             @unique
  gender            String?
  birthdate         String?
  age               Int?
  ageGroup          String?
  firstVisitDate    DateTime           @db.Date
  lastVisitDate     DateTime?          @db.Date
  lastPurchaseDate  DateTime?          @db.Date
  mainBranchId      String?
  totalVisits       Int                @default(0)
  totalSpent        Decimal            @default(0) @db.Decimal(10, 2)
  createdAt         DateTime           @default(now())
  updatedAt         DateTime           @updatedAt
  purchases         CustomerPurchase[]
  mainBranch        Branch?            @relation(fields: [mainBranchId], references: [id])
  dailyVisitors     DailyVisitor[]
  memos             CustomerMemo[]
  claims            CustomerClaim[]

  @@index([lastVisitDate])
  @@index([mainBranchId])
  @@index([phone])
  @@index([totalSpent])
  @@index([totalVisits])
  @@index([mainBranchId], map: "idx_customers_mainbranchid")
  @@index([phone], map: "idx_customers_phone")
  @@map("customers")
}

/// This model or at least one of its fields has comments in the database, and requires an additional setup for migrations: Read more: https://pris.ly/d/database-comments
model DailyMetric {
  id                String   @id(map: "daily_metrics_new_pkey1") @default(cuid())
  branchId          String
  date              DateTime @db.Date
  newUsers          Int?
  seatUsage         Int?
  totalRevenue      Decimal? @db.Decimal(10, 2)
  dayTicketRevenue  Decimal? @db.Decimal(10, 2)
  timeTicketRevenue Decimal? @db.Decimal(10, 2)
  termTicketRevenue Decimal? @db.Decimal(10, 2)
  lockerRevenue     Decimal? @db.Decimal(10, 2)
  pointUsed         Decimal? @db.Decimal(10, 2)
  collectedAt       DateTime @default(now()) @db.Timestamp(6)
  newUsers10s       Int?
  newUsers20s       Int?
  newUsers30s       Int?
  newUsers40s       Int?
  newUsers50s       Int?
  newUsers60plus    Int?
  newUsersFemale    Int?
  newUsersMale      Int?
  branch            Branch   @relation(fields: [branchId], references: [id], onDelete: Cascade, onUpdate: NoAction, map: "daily_metrics_branchid_fkey")

  @@unique([branchId, date], map: "daily_metrics_branchid_date_key")
  @@index([branchId, date], map: "daily_metrics_branchid_date_idx")
  @@index([date])
  @@map("daily_metrics")
}

model DailyVisitor {
  id                   String    @id @default(cuid())
  branchId             String
  visitDate            DateTime  @db.Date
  phone                String
  collectedAt          DateTime  @default(now())
  visitTime            String?
  age                  Int?
  ageGroup             String?
  gender               String?
  birthdate            String?
  duration             Int?
  endTime              DateTime?
  paymentMethod        String?
  remainingTermTicket  String?
  remainingTimePackage String?
  seat                 String?
  startTime            DateTime?
  customerId           String?
  remainingFixedSeat   String?
  branch               Branch    @relation(fields: [branchId], references: [id], onDelete: Cascade)
  customer             Customer? @relation(fields: [customerId], references: [id])

  @@index([branchId, visitDate])
  @@index([customerId])
  @@index([phone])
  @@index([visitDate])
  @@map("daily_visitors")
}

model HourlyUsage {
  id          String   @id @default(cuid())
  branchId    String
  date        DateTime @db.Date
  hour        Int
  usageCount  Int
  collectedAt DateTime @default(now())
  branch      Branch   @relation(fields: [branchId], references: [id], onDelete: Cascade)

  @@unique([branchId, date, hour])
  @@index([branchId, date])
  @@index([date])
  @@map("hourly_usage")
}

model Strategy {
  id               String           @id @default(cuid())
  name             String
  type             String
  startDate        DateTime         @db.Date
  endDate          DateTime         @db.Date
  description      String?
  createdAt        DateTime         @default(now())
  updatedAt        DateTime         @updatedAt
  reason           String?
  status           String           @default("ONGOING")
  branches         StrategyBranch[]

  @@index([startDate, endDate])
  @@index([status])
  @@index([type])
  @@map("strategies")
}

model StrategyBranch {
  id         String   @id @default(cuid())
  strategyId String
  branchId   String
  createdAt  DateTime @default(now())
  branch     Branch   @relation(fields: [branchId], references: [id], onDelete: Cascade)
  strategy   Strategy @relation(fields: [strategyId], references: [id], onDelete: Cascade)

  @@unique([strategyId, branchId])
  @@index([branchId])
  @@index([strategyId])
  @@map("strategy_branches")
}

model TicketBuyer {
  id              String        @id @default(cuid())
  ticketRevenueId String
  branchId        String
  date            DateTime      @db.Date
  ticketName      String
  collectedAt     DateTime      @default(now())
  customerHash    String?
  paymentTime     String?
  phone           String?
  amount          Decimal?      @db.Decimal(10, 2)
  pointUsed       Decimal?      @db.Decimal(10, 2)
  ticketRevenue   TicketRevenue @relation(fields: [ticketRevenueId], references: [id], onDelete: Cascade)

  @@index([branchId, date])
  @@index([customerHash])
  @@index([phone])
  @@index([ticketName])
  @@map("ticket_buyers")
}

model TicketRevenue {
  id            String        @id @default(cuid())
  branchId      String
  date          DateTime      @db.Date
  ticketName    String
  revenue       Decimal       @db.Decimal(10, 2)
  collectedAt   DateTime      @default(now())
  ticketBuyers  TicketBuyer[]
  branch        Branch        @relation(fields: [branchId], references: [id], onDelete: Cascade)

  @@unique([branchId, date, ticketName])
  @@index([branchId, date])
  @@index([date])
  @@index([ticketName])
  @@map("ticket_revenue")
}

model User {
  id        String    @id @default(cuid())
  username  String    @unique
  password  String
  name      String
  role      UserRole  @default(BRANCH)
  branchId  String?
  isActive  Boolean   @default(true)
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  branch            Branch?            @relation(fields: [branchId], references: [id])
  memos             CustomerMemo[]
  claims            CustomerClaim[]
  savedFilters      SavedFilter[]
  automationFlows   AutomationFlow[]
  // Strategy 관련
  events            Event[]
  externalFactors   ExternalFactor[]

  @@map("users")
}

model CustomerMemo {
  id         String   @id @default(cuid())
  customerId String
  content    String
  createdBy  String
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
  customer   Customer @relation(fields: [customerId], references: [id], onDelete: Cascade)
  author     User     @relation(fields: [createdBy], references: [id])

  @@index([customerId])
  @@index([createdBy])
  @@map("customer_memos")
}

model CustomerClaim {
  id          String    @id @default(cuid())
  customerId  String
  title       String
  description String?
  status      ClaimStatus @default(OPEN)
  branchId    String
  createdBy   String
  resolvedAt  DateTime?
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  customer    Customer  @relation(fields: [customerId], references: [id], onDelete: Cascade)
  branch      Branch    @relation(fields: [branchId], references: [id])
  author      User      @relation(fields: [createdBy], references: [id])

  @@index([customerId])
  @@index([branchId])
  @@index([createdBy])
  @@index([status])
  @@map("customer_claims")
}

model SavedFilter {
  id        String   @id @default(cuid())
  name      String
  filters   Json
  userId    String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@map("saved_filters")
}

enum ClaimStatus {
  OPEN
  RESOLVED
  CLOSED
}

enum UserRole {
  ADMIN
  BRANCH
}

// ===== 자동화 모듈 =====

model AutomationFlow {
  id              String    @id @default(cuid())
  name            String
  flowType        FlowType  @default(SMS)
  branchId        String
  isActive        Boolean   @default(true)
  triggerConfig   Json
  filterConfig    Json
  messageTemplate String?
  messageType     String?
  pointConfig     Json?
  createdBy       String
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt
  lastExecutedAt  DateTime?
  // 스터디큐브 로그인 정보 (자동 문자 발송용)
  studycubeUsername String?
  studycubePassword String?   // 암호화 저장 권장

  branch    Branch          @relation(fields: [branchId], references: [id], onDelete: Cascade)
  author    User            @relation(fields: [createdBy], references: [id])
  sendLogs  SmsSendLog[]
  pointLogs PointActionLog[]

  @@index([branchId])
  @@index([isActive])
  @@index([flowType])
  @@index([createdBy])
  @@map("automation_flows")
}

model SmsSendLog {
  id         String   @id @default(cuid())
  flowId     String
  customerId String
  phone      String
  message    String
  byteCount  Int
  pointUsed  Decimal  @db.Decimal(10, 2)
  sentAt     DateTime @default(now())
  status     String   @default("SUCCESS")

  flow AutomationFlow @relation(fields: [flowId], references: [id], onDelete: Cascade)

  @@index([flowId])
  @@index([customerId])
  @@index([sentAt])
  @@map("sms_send_log")
}

model PointActionLog {
  id         String    @id @default(cuid())
  flowId     String
  customerId String
  phone      String
  action     String
  amount     Int
  reason     String
  expiryDate DateTime? @db.Date
  executedAt DateTime  @default(now())
  status     String    @default("SUCCESS")

  flow AutomationFlow @relation(fields: [flowId], references: [id], onDelete: Cascade)

  @@index([flowId])
  @@index([customerId])
  @@index([executedAt])
  @@map("point_action_log")
}

model SmsPointHistory {
  id        String   @id @default(cuid())
  branchId  String
  balance   Int
  checkedAt DateTime @default(now())

  @@index([branchId])
  @@index([checkedAt])
  @@map("sms_point_history")
}

enum FlowType {
  SMS
  POINT
  SMS_POINT
}

// AI 대화 저장
model AiConversation {
  id        String      @id @default(cuid())
  userId    String
  branchId  String?
  title     String      @default("새 대화")
  createdAt DateTime    @default(now())
  updatedAt DateTime    @updatedAt
  messages  AiMessage[]

  @@index([userId])
  @@index([createdAt])
  @@map("ai_conversations")
}

model AiMessage {
  id             String         @id @default(cuid())
  conversationId String
  role           String         // 'user' | 'assistant'
  content        String
  createdAt      DateTime       @default(now())
  conversation   AiConversation @relation(fields: [conversationId], references: [id], onDelete: Cascade)

  @@index([conversationId])
  @@map("ai_messages")
}

// ===== 매장 전략 & 이벤트 측정 모듈 =====

model Event {
  id              String   @id @default(cuid())
  name            String
  startDate       DateTime @db.Date
  endDate         DateTime @db.Date
  cost            Decimal? @db.Decimal(12, 2)
  description     String?
  hypothesis      String?  // 가설: 왜 이 이벤트가 효과가 있을 것인가
  primaryKpi      String?  // 주요 측정 지표
  secondaryKpis   Json?    // 보조 지표 배열
  status          EventStatus @default(PLANNED)
  createdBy       String
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  author          User     @relation(fields: [createdBy], references: [id])
  types           EventType[]
  branches        EventBranch[]
  targets         EventTarget[]
  performances    EventPerformance[]
  cohorts         EventCohort[]

  @@index([startDate, endDate])
  @@index([status])
  @@index([createdBy])
  @@map("events")
}

model EventType {
  id        String @id @default(cuid())
  eventId   String
  type      String // PRICING, PROMOTION, MARKETING, ENGAGEMENT, OPERATION
  subType   String // DISCOUNT_GENERAL, POINT_EVENT, SMS_CAMPAIGN, etc.

  event     Event  @relation(fields: [eventId], references: [id], onDelete: Cascade)

  @@index([eventId])
  @@index([type])
  @@map("event_types")
}

model EventBranch {
  id        String   @id @default(cuid())
  eventId   String
  branchId  String
  createdAt DateTime @default(now())

  event     Event    @relation(fields: [eventId], references: [id], onDelete: Cascade)
  branch    Branch   @relation(fields: [branchId], references: [id], onDelete: Cascade)

  @@unique([eventId, branchId])
  @@index([eventId])
  @@index([branchId])
  @@map("event_branches")
}

model EventTarget {
  id           String @id @default(cuid())
  eventId      String
  segmentType  String // VISIT, TICKET, AGE, GENDER
  segmentValue String // churned, at_risk_14, fixed_ticket, 20대, 남 등

  event        Event  @relation(fields: [eventId], references: [id], onDelete: Cascade)

  @@index([eventId])
  @@map("event_targets")
}

model EventPerformance {
  id                String   @id @default(cuid())
  eventId           String
  branchId          String
  calculatedAt      DateTime @default(now())
  comparisonType    String   // YOY (전년동기), MOM (전월), CONTROL (대조군)

  // 매출 지표
  revenueBefore         Decimal? @db.Decimal(12, 2)
  revenueAfter          Decimal? @db.Decimal(12, 2)
  revenueGrowth         Decimal? @db.Decimal(8, 4)
  revenueGrowthAdjusted Decimal? @db.Decimal(8, 4) // 보정된 성장률

  // 고객 지표
  newCustomers      Int?
  returnedCustomers Int?
  churnedCustomers  Int?
  segmentTransitions Json? // 세그먼트 이동 데이터

  // 방문 지표
  visitsBefore      Int?
  visitsAfter       Int?
  visitsGrowth      Decimal? @db.Decimal(8, 4)

  // 이용권별 매출
  dayTicketRevenue  Decimal? @db.Decimal(12, 2)
  timeTicketRevenue Decimal? @db.Decimal(12, 2)
  termTicketRevenue Decimal? @db.Decimal(12, 2)
  fixedTicketRevenue Decimal? @db.Decimal(12, 2)

  // 통계 분석
  isSignificant     Boolean?
  pValue            Decimal? @db.Decimal(8, 6)
  effectSize        Decimal? @db.Decimal(8, 4) // Cohen's d

  // 종합 점수
  performanceScore  Int?     // 0-100
  verdict           String?  // EXCELLENT, GOOD, NEUTRAL, POOR, FAILED
  scoreBreakdown    Json?    // 점수 계산 상세 내역

  // 세그먼트/이용권/방문패턴 상세
  segmentChanges    Json?    // 세그먼트별 변화 데이터
  ticketUpgrades    Json?    // 이용권 업그레이드 데이터
  visitPattern      Json?    // 방문 패턴 데이터

  // AI 인사이트
  insights          Json?

  event             Event    @relation(fields: [eventId], references: [id], onDelete: Cascade)
  branch            Branch   @relation(fields: [branchId], references: [id], onDelete: Cascade)

  @@index([eventId])
  @@index([branchId])
  @@index([calculatedAt])
  @@map("event_performance")
}

// 코호트 (장기 추적용 - Phase 2)
model EventCohort {
  id          String   @id @default(cuid())
  eventId     String
  cohortType  String   // NEW (신규), RETURNED (복귀), PARTICIPATED (참여)
  customerIds Json     // 고객 ID 배열
  createdAt   DateTime @default(now())

  event       Event    @relation(fields: [eventId], references: [id], onDelete: Cascade)
  snapshots   EventCohortSnapshot[]

  @@index([eventId])
  @@map("event_cohorts")
}

model EventCohortSnapshot {
  id             String   @id @default(cuid())
  cohortId       String
  snapshotMonth  Int      // 1, 3, 6 (개월 후)
  activeCount    Int?     // 활성 고객 수
  revisitRate    Decimal? @db.Decimal(5, 2) // 재방문율 %
  avgLtv         Decimal? @db.Decimal(12, 2) // 평균 LTV
  upgradedCount  Int?     // 이용권 업그레이드 수
  churnedCount   Int?     // 이탈 수
  calculatedAt   DateTime @default(now())

  cohort         EventCohort @relation(fields: [cohortId], references: [id], onDelete: Cascade)

  @@unique([cohortId, snapshotMonth])
  @@index([cohortId])
  @@map("event_cohort_snapshots")
}

// 외부 요인
model ExternalFactor {
  id              String   @id @default(cuid())
  type            String   // EXAM, VACATION, HOLIDAY, WEATHER, COMPETITOR
  name            String
  startDate       DateTime @db.Date
  endDate         DateTime @db.Date
  impactEstimate  String?  // POSITIVE, NEGATIVE, NEUTRAL
  description     String?
  isRecurring     Boolean  @default(false)
  recurringRule   Json?    // 반복 규칙 (매년 4월 3주 등)
  source          String   @default("MANUAL") // MANUAL, API
  createdBy       String?
  createdAt       DateTime @default(now())

  author          User?    @relation(fields: [createdBy], references: [id])
  branches        ExternalFactorBranch[]

  @@index([startDate, endDate])
  @@index([type])
  @@map("external_factors")
}

model ExternalFactorBranch {
  id        String   @id @default(cuid())
  factorId  String
  branchId  String
  createdAt DateTime @default(now())

  factor    ExternalFactor @relation(fields: [factorId], references: [id], onDelete: Cascade)
  branch    Branch         @relation(fields: [branchId], references: [id], onDelete: Cascade)

  @@unique([factorId, branchId])
  @@index([factorId])
  @@index([branchId])
  @@map("external_factor_branches")
}

// 날씨 데이터 (Phase 2 - 기상청 API 연동)
model WeatherData {
  id            String   @id @default(cuid())
  date          DateTime @db.Date
  regionCode    String   // 지역 코드
  avgTemp       Decimal? @db.Decimal(4, 1)
  maxTemp       Decimal? @db.Decimal(4, 1)
  minTemp       Decimal? @db.Decimal(4, 1)
  precipitation Decimal? @db.Decimal(6, 1) // 강수량 mm
  weatherCode   String?  // 맑음, 흐림, 비 등
  isExtreme     Boolean  @default(false) // 폭염, 한파, 장마 등
  extremeType   String?  // HEATWAVE, COLDWAVE, MONSOON 등
  collectedAt   DateTime @default(now())

  @@unique([date, regionCode])
  @@index([date])
  @@index([regionCode])
  @@map("weather_data")
}

enum EventStatus {
  PLANNED
  ONGOING
  COMPLETED
  CANCELLED
}
